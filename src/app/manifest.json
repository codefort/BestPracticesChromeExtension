{
  "$schema": "http://json.schemastore.org/webextension",
  "manifest_version": 2,
  "name": "Web Developer Checklist",
  "version": "1.8.6",
  "author": "Mads Kristensen",
  "description": "Analyses any web page for violations of best practices",

  "permissions": [
    "<all_urls>"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+W"
      }
    }
  },

  "browser_action": {
    "default_icon": {
      "19": "vs-19.png",
      "48": "vs-48.png",
      "64": "vs-64.png",
      "128": "vs-128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Web Developer Checklist"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "icons": {
    "19": "vs-19.png",
    "48": "vs-48.png",
    "64": "vs-64.png",
    "128": "vs-128.png"
  }
}
