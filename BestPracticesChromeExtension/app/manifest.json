{
  "manifest_version": 2,
  "name" : "Web Developer Checklist",
  "version" : "1.4",
  "description" : "Analyses any web page for violations of best practices'",
  "permissions": ["tabs", "<all_urls>"],
    
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+1",
         "mac": "Alt+1"
      }
    }
  },
  
  "page_action": {
    "default_icon": "img/vs-19.png",
    "default_popup": "popup/popup.html"
  },
  
  "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "js" : ["content/favicon.js", "content/mediaqueries.js", "content/base.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],

  "background" : {
    "scripts": ["background/background.js"]
  },

  "icons" : {
    "48" : "img/vs-48.png",
    "128" : "img/vs-128.png"
  }
}